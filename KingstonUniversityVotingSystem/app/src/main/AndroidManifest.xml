<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cognition.app.kingstonuniversityvotingsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".PasswordResetActivity" />
        <activity android:name=".BrowsePollsActivity" />
        <activity android:name=".CreatePollActivity" />
        <activity android:name=".VotingActivity" />
        <activity android:name=".MyPollsActivity" />
        <activity android:name=".StartDiscussionActivity" />
        <activity android:name=".DiscussionPageActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".UpdatePasswordActivity" />
        <activity android:name=".ViewsActivity"></activity>
    </application>

</manifest>